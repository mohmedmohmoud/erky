<odoo>
    <data>
        <record id="deposit_cheque_wiz_view" model="ir.ui.view">
            <field name="name">deposit.cheque.wiz.view</field>
            <field name="model">cheque.deposit.wiz</field>
            <field name="arch" type="xml">
                <form>
                    <center><separator string="You can change bank or cheque date if you want (: !"/></center>
                    <group>
                        <field name="cheque_id" invisible="1"/>
                        <field name="journal_id"/>
                        <field name="cheque_date"/>
                    </group>
                    <footer>
                    <button special="cancel" string="Oops, no! (:" class="btn-primary"/>
                    <button name="action_deposit_cheque" string="Deposit Cheque" type="object" class="btn-secondary"/>
                </footer>
                </form>
            </field>
        </record>

        <record id="action_deposit_cheque_wiz" model="ir.actions.act_window">
            <field name="name">Deposit Cheque Wiz</field>
            <field name="res_model">cheque.deposit.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>