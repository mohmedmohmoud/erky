<odoo>
    <data>
        <record id="view_res_bank_inh_customize_form" model="ir.ui.view">
            <field name="name">res.bank.inh.customize.form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                    <form position="inside">
                        <notebook>
                            <page string="Cheque Print Setting">
                                <group>
                                    <group string="Account Holder" style="border: 1px solid blue;padding:5px;margin:5px;">
                                        <field name="account_holder_w"/>
                                        <field name="account_holder_h"/>
                                        <field name="account_holder_x"/>
                                        <field name="account_holder_y"/>
                                    </group>
                                    <group string="Date" style="border: 1px solid blue;padding:5px;margin:5px;">
                                        <field name="date_w"/>
                                        <field name="date_h"/>
                                        <field name="date_x"/>
                                        <field name="date_y"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Amount" style="border: 1px solid blue;padding:5px;margin:5px;">
                                        <field name="amount_w"/>
                                        <field name="amount_y"/>
                                        <field name="amount_x"/>
                                        <field name="amount_y"/>
                                    </group>
                                    <group string="Description" style="border: 1px solid blue;padding:5px;margin:5px;">
                                        <field name="desc_w"/>
                                        <field name="desc_h"/>
                                        <field name="desc_x"/>
                                        <field name="desc_y"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </form>
            </field>
        </record>

        <menuitem name="Banks" id="menu_res_bank_customize" parent="menu_account_cheque" action="base.action_res_bank_form" sequence="3"/>
    </data>
</odoo>


