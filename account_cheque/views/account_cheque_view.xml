<odoo>
  <data>

    <menuitem name="Cheques" id="menu_account_cheque" parent="account.menu_finance" sequence="10"/>
    <record id="account_cheque_tree_view" model="ir.ui.view">
      <field name="name">account.cheque.tree.view</field>
      <field name="model">account.cheque</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false">
          <field name="name"/>
          <field name="cheque_number"/>
          <field name="date"/>
          <field name="beneficiary_id"/>
          <field name="account_holder_id"/>
          <field name="journal_id"/>
          <field name="account_number"/>
          <field name="bank_id"/>
          <field name="amount"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="account_cheque_from_view" model="ir.ui.view">
      <field name="name">account.cheque.form.view</field>
      <field name="model">account.cheque</field>
      <field name="arch" type="xml">
        <form create="false" edit="false">
          <header>
            <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
            <button name="action_to_bank" string="Deposit In Bank" class="oe_highlight" states="under_collection,inbound_return" type="object"/>
            <button name="action_to_withdrawal" string="Withdrawal" class="oe_highlight" states="out_standing,outbound_return" type="object"/>
            <button name="action_inbound_return" string="Return Inbound Cheque" class="oe_highlight" states="in_bank,under_collection" type="object"/>
            <button name="action_outbound_return" string="Return Outbound Cheque" class="oe_highlight" states="withdrawal,out_standing" type="object"/>
            <button name="action_return_inbound_to_account" string="Return To Account" class="oe_highlight" states="in_bank,under_collection" type="object"/>
            <button name="action_return_outbound_to_account" string="Return To Account" class="oe_highlight" states="withdrawal,out_standing" type="object"/>
            <button name="action_to_done" string="Done" class="oe_highlight" states="withdrawal,in_bank,inbound_return,outbound_return" type="object"/>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <lable for="name"/>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="cheque_type" invisible="1"/>
                <field name="account_holder_id"/>
                <field name="date"/>
                <field name="bank_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="amount" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/>
              </group>
              <group>
                <field name="beneficiary_id"/>
                <field name="payment_date"/>
                <field name="journal_id"/>
                <field name="account_number"/>
                <field name="cheque_number"/>
              </group>
            </group>
            <group>
              <field name="memo"/>
            </group>
            <field name="cheque_line_ids">
              <tree>
                <field name="datetime"/>
                <field name="desc"/>
                <field name="move_id"/>
              </tree>
            </field>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_account_inbound_cheque" model="ir.actions.act_window">
      <field name="name">Accounting Inbound Cheque</field>
      <field name="res_model">account.cheque</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('cheque_type', '=', 'inbound')]</field>
    </record>

    <menuitem name="Inbound Cheque" id="menu_account_inbound_cheque" parent="menu_account_cheque" action="action_account_inbound_cheque" sequence="1"/>

    <record id="action_account_outbound_cheque" model="ir.actions.act_window">
      <field name="name">Accounting Outbound Cheque</field>
      <field name="res_model">account.cheque</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('cheque_type', '=', 'outbound')]</field>
    </record>

    <menuitem name="Outbound Cheque" id="menu_account_outbound_cheque" parent="menu_account_cheque" action="action_account_outbound_cheque" sequence="2"/>

  </data>
</odoo>