<odoo>
    <data>
        <record id="view_erky_inherit_product_uom_form" model="ir.ui.view">
            <field name="name">view.erky.inherit.product.uom.form</field>
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_form_view"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="is_packing_unit"/>
                    <label for="packing_weight"/>
                    <div class="o_row">
                        <field name="packing_weight" attrs="{'invisible': [('is_packing_unit', '=', False)], 'required': [('is_packing_unit', '=', True)]}"/>
                        <field name="packing_uom_id" attrs="{'invisible': [('is_packing_unit', '=', False)], 'required': [('is_packing_unit', '=', True)]}"/>
                    </div>
                    <field name="unit_weight" attrs="{'invisible': [('is_packing_unit', '=', False)], 'required': [('is_packing_unit', '=', True)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>