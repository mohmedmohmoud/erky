<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="erky_base.erky_contract_tree_view">
      <field name="name">erky.contract.tree.view</field>
      <field name="model">erky.contract</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="date"/>
          <field name="to_partner_id"/>
          <field name="to_partner_address"/>
          <field name="product_id"/>
          <field name="total_amount"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="erky_base.erky_contract_form_view">
      <field name="name">erky.contract.form.view</field>
      <field name="model">erky.contract</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <h2><field name="name"/></h2>
            </group>
            <group>
              <group>
                <field name="date"/>
                <field name="to_partner_id"/>
                <field name="product_id"/>
                <field name="qty"/>
              </group>
              <group>
                <field name="tax_number"/>
                <field name="to_partner_address"/>
                <field name="price"/>
              </group>
            </group>
            <group>
              <h2><field name="total_amount"/> <field name="currency_id"/> </h2>
            </group>
            <group>
              <group>
                <field name="port_from"/>
                <field name="shipment_method"/>
                <field name="bank"/>
              </group>
              <group>
                <field name="port_to"/>
                <field name="payment_method"/>
                <field name="bank_branch"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="erky_base.erky_contract_action">
      <field name="name">Erky Contract window</field>
      <field name="res_model">erky.contract</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->
    <menuitem name="Erky" id="erky_base.menu_erky_root"/>
    <!-- menu categories -->
    <menuitem name="Erky Base" id="erky_base.menu_erky_base" parent="erky_base.menu_erky_root"/>

    <!-- actions -->
    <menuitem name="Contract" id="erky_base.menu_erky_contract" parent="erky_base.menu_erky_base"
              action="erky_base.erky_contract_action"/>
  </data>
</odoo>