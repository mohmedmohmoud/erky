<odoo>
    <data>
        <!-- Erky Export Form -->
        <record model="ir.ui.view" id="erky_base.erky_export_form_tree_view">
            <field name="name">erky.export.form.tree.view</field>
            <field name="model">erky.export.form</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contract_id"/>
                    <field name="form_no"/>
                    <field name="issue_date"/>
                    <field name="expire_date"/>
                    <field name="bank_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="erky_base.erky_export_form_view">
            <field name="name">erky.export.form.view</field>
            <field name="model">erky.export.form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!--<button name="action_submit" string="Submit" type="object" class="oe_highlight" states="draft"/>-->
                        <!--<button name="action_ssmo_confirm" string="Confirm" type="object" class="oe_highlight"-->
                                <!--states="ssmo"/>-->
                        <!--<button name="action_shipment" string="Apply Shipment" type="object" class="oe_highlight"-->
                                <!--states="shipment"/>-->
                        <!--<button name="action_cancel" string="Cancel" type="object" class="oe_highlight"-->
                                <!--states="ssmo,shipment"/>-->
                        <!--<button name="%(action_erky_create_new_shipment)d"-->
                                <!--context="{'default_product_uom_id': product_uom_id, 'default_export_form_id': id, 'default_package_uom_id': package_uom_id}"-->
                                <!--string="Create New Shipment" type="action" states="draft" class="oe_highlight"/>-->
                        <!--<button name="%(erky_template_report_wiz_action)d" string="Print Report"-->
                                <!--context="{'default_export_form_id': id}" type="action" class="oe_highlight"/>-->
                        <button name="action_submit_trade_ministry" class="oe_highlight" type="object" string="Submit To MC" states="draft"/>
                        <button name="action_create_request" class="oe_highlight" type="object" string="Create Request" states="draft"/>
                        <button name="action_to_bank" class="oe_highlight" type="object" string="To Bank" states="mc"/>
                        <button name="action_ssmo" class="oe_highlight" type="object" string="SSMO" states="bank"/>
                        <button name="action_cancel" type="object" string="Cancel" states="mc,bank,ssmo"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,mc,bank,ssmo,done" nolabel="1"
                               readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_shipment_form" string="Shipments" type="object" icon="fa-truck"
                                    class="oe_stat_button">
                                <field name="shipment_count" invisible="0"/>
                            </button>
                            <button name="action_open_requests" string="Request" type="object"
                                    icon="fa-file-text-o"
                                    class="oe_stat_button"
                             >
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="contract_id" invisible="1"/>
                                <field name="purchase_contract_id" invisible="1"/>
                                <field name="contract_no"/>
                                <field name="form_no" attrs="{'invisible': [('state', '!=', 'bank')],
                                                              'required': [('state', '=', 'bank')]}"/>
                                <field name="exporter_id" readonly="1"/>
                                <field name="importer_id" readonly="1"/>
                                <field name="mc_attachment_id" attrs="{'invisible': [('state', 'in', ['draft']),]}"/>
                            </group>
                            <group>
                                <field name="bank_id"/>
                                <field name="bank_branch_id" domain="[('bank_id', '=', bank_id)]"/>
                                <field name="issue_date" attrs="{'invisible': [('state', 'in', ['draft'])],
                                                                 'required': [('state', '=', 'mc')]}"/>
                                <field name="expire_date" attrs="{'invisible': [('state', 'in', ['draft']),],
                                                                  'required': [('state', '=', 'mc')]}"/>
                                <field name="bank_attachment_id" attrs="{'invisible': [('state', 'in', ['draft','mc'])]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="exporter_port_id"/>
                            </group>
                            <group>
                                <field name="shipment_method"/>
                            </group>

                        </group>
                        <group>
                            <group string="Product" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <field name="product_id" attrs="{'invisible': [('state', 'in', ['draft'])]}"/>
                                <label for="qty" attrs="{'invisible': [('state', 'in', ['draft'])]}"/>
                                <div class="o_row" attrs="{'invisible': [('state', 'in', ['draft'])]}">
                                    <field name="qty"/>
                                    <field name="product_uom_id" options="{'no_create': True, 'no_open': True}"/>
                                </div>
                            </group>
                            <group string="Packaging And Shipments" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <field name="package_uom_id"/>
                                <field name="net_shipment_qty"/>
                                <field name="gross_shipment_qty"/>
                            </group>
                        </group>
                        <notebook>
                            <!--=======================SSMO====================-->
                            <page string="SSMO" attrs="{'invisible': [('state', 'in', ['draft','mc','bank'])]}">
                                <group>
                                    <group>
                                        <field name="ssmo_reference"/>
                                        <field name="ssmo_massage_validation"/>
                                        <field name="ssmo_issue_date"/>
                                    </group>
                                    <group>
                                        <field name="voucher_no"/>
                                        <field name="voucher_date"/>
                                        <field name="ssmo_attachment_id"/>
                                    </group>
                                </group>
                            </page>
                            <!--=======================Vehicle Shipment====================-->
                            <page string="Vehicle Shipment" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <group>
                                    <field name="vehicle_shipment_ids" nolabel="1" readonly="1"/>
                                </group>
                            </page>
                            <!--=======================Container Shipment====================-->
                            <page string="Available Containers" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <br/>
                                <p>
                                    <button name="%(generate_container_wizard_action)d"
                                            context="{'default_export_form_id': id}"
                                            string="Generate New Containers" type="action" class="oe_highlight"/>
                                </p>
                                <field name="container_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="export_form_id" invisible="1"/>
                                        <field name="size"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Form Cost" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <field name="cost_ids">
                                    <tree editable="bottom">
                                        <field name="partner_id"/>
                                        <field name="name"/>
                                        <field name="cost" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                    </tree>
                                </field>
                            </page>
                            <!--=======================Bills====================-->
                            <page string="Bills" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <field name="bill_ids"/>
                            </page>
                            <!--=======================Expenses====================-->
                            <page string="Form Expense" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <field name="hr_expense_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="reference"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="unit_amount"/>
                                        <field name="state" invisible="0"/>
                                    </tree>
                                </field>
                            </page>
                            <!--=======================Picking====================-->
                            <page string="Picking" attrs="{'invisible': [('state', 'in', ['draft','mc','bank','ssmo'])]}">
                                <group>
                                    <field name="picking_ids" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="erky_base.erky_export_form_action">
            <field name="name">Erky Export Form</field>
            <field name="res_model">erky.export.form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- actions -->
        <menuitem name="Export Form" id="erky_base.menu_erky_export_form" parent="erky_base.menu_erky_contracts"
                  action="erky_base.erky_export_form_action" sequence="2"/>

        <record model="ir.ui.view" id="erky_base.erky_request_form_view">
            <field name="name">erky.request.view.form</field>
            <field name="model">erky.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_set_to_done" class="oe_highlight" type="object" string="Set To Done"
                                states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="internal_contract_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="purchase_contract_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="request_type"/>
                        </group>
                        <group>
                            <field name="request_body"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="erky_base.erky_request_tree_view">
            <field name="name">erky.request.view.tree</field>
            <field name="model">erky.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="purchase_contract_id"/>
                    <field name="internal_contract_id"/>
                    <field name="request_type"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="erky_base.erky_request_action">
            <field name="name">Erky Request window</field>
            <field name="res_model">erky.request</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>
    </data>
</odoo>