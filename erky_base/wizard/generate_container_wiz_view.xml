<odoo>
    <record id="wizard_erky_template_report_wiz_form" model="ir.ui.view">
        <field name="name">erky.template.report.wiz.form</field>
        <field name="model">erky.generate.container.wiz</field>
        <field name="arch" type="xml">
            <form string="Generate Container:">
                <group>
                    <field name="export_form_id" invisible="1"/>
                </group>
                <field name="container_lines_ids">
                    <tree editable="bottom">
                        <field name="container_ref"/>
                        <field name="container_size"/>
                    </tree>
                </field>
                <footer>
                    <button string='Generate New Containers' name="generate_container" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="generate_container_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Container</field>
        <field name="res_model">erky.generate.container.wiz</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_erky_template_report_wiz_form"/>
        <field name="target">new</field>
    </record>
</odoo>