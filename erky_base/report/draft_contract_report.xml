<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_euro_lowmargin_contract_erky" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">42</field>
            <field name="margin_bottom">16</field>
            <field name="margin_left">16</field>
            <field name="margin_right">16</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">80</field>
        </record>
        <report
                id="action_report_draft_erky_contract"
                string="Draft Contract"
                model="erky.contract"
                name="erky_base.report_draft_erky_contract"
                file="erky_base.report_draft_erky_contract"
                report_type="qweb-pdf"
                paperformat="paperformat_euro_lowmargin_contract_erky"
        />

        <template id="report_draft_erky_contract">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page" style="position:relative;">
                            <div style="margin-top:70px;">
                                <strong><center style="text-decoration: underline;font-size: 1.8em;font-family: 'Times New Roman';">EXPORT CONTRACT</center></strong>
                            </div>
                            <div class="clearfix" style="font-size: 1.2em;font-family: 'Times New Roman';font-style:bold;margin-top:50px;">
                                <div class="float-left" style="text-align:left"><strong>NO:</strong> <t t-esc="o.name"/></div>
                                <div class="float-right" style="text-align:right"><strong>DATE:</strong> <t t-esc="o.date"/></div>
                            </div>
                            <table style="padding:10px; border-collapse: separate;border-spacing: 0 16px !important;font-size: 1.2em;font-family: 'Times New Roman';">
                                <tr>
                                    <td style="width:30%">EXPORTER:</td>
                                    <td>
                                        <t t-esc="o.exporter_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>TAX ID:</td>
                                    <td>
                                        <t t-esc="o.tax_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>IMPORTER:</td>
                                    <td>
                                        <t t-esc="o.importer_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>IMPORTER ADDRESS:</td>
                                    <td><t t-esc="o.importer_country_id.name"/></td>
                                </tr>
                                <tr>
                                    <td>PRODUCT NAME:</td>
                                    <td>
                                        <t t-esc="o.product_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>ORIGIN:</td>
                                    <td>
                                        <t t-esc="o.exporter_id.country_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>QTY:</td>
                                    <td>
                                        <t t-esc="o.qty"/>
                                        <t t-esc="o.product_uom_id.name"/><t t-esc="o.allowed_percentage"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>PRICE:</td>
                                    <td>
                                        <t t-esc="o.unit_price" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
<!--                                        <t t-esc="res_company.currency_id.symbol"/>-->
                                    </td>
                                </tr>
                                <tr>
                                    <td>TOTAL AMOUNT:</td>
                                    <td>
                                        <t t-esc="o.total_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        <t t-esc="total_amount_txt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>PORT OF LOADING:</td>
                                    <td>
                                        <t t-esc="o.exporter_port_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>PORT OF DISCHARGE:</td>
                                    <td>
                                        <t t-esc="o.importer_port_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>SHIPMENT METHOD:</td>
                                    <td>
                                        <t t-esc="dict(o._fields['shipment_method'].selection).get(o.shipment_method)"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>PAYMENT METHOD:</td>
                                    <td>
                                        <t t-esc="dict(o._fields['payment_method'].selection).get(o.payment_method)"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>BANK:</td>
                                    <td>
                                        <t t-esc="o.bank_id.name"/>
                                        -
                                        <t t-esc="o.bank_branch_id.name"/>
                                    </td>
                                </tr>
                            </table>
                            <div class="clearfix" style="margin-top:200px;font-size: 1.0em;font-family: 'Times New Roman';">
                                <div class="float-left" style="text-align:left"><span>EXPORTER SIGNATURE: ..............................</span></div>
                                <div class="float-right" style="text-align:right"><span>IMPORTER SIGNATURE: ..............................</span></div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>