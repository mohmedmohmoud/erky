<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="write_function.write_function_form_view">
      <field name="name">write.function.list</field>
      <field name="model">write.function</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="age"/>
            <field name="gd"/>
            <button name="create_data" string="Create Date" type="object" class="oe_highlight"/>
            <button name="write_data" string="Write Date" type="object" class="oe_highlight"/>
          </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="write_function.action_window_write_function">
      <field name="name">write_function window</field>
      <field name="res_model">write.function</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
