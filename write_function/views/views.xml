        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    <menuitem name="Write Function" id="write_function.menu_root_write_function"/>
    <!-- menu categories -->
    <menuitem name="Menu Write Function" id="write_function.menu_1_write_function" parent="write_function.menu_root_write_function" action="action_window_write_function"/>
<!--    <menuitem name="Menu 2" id="write_function.menu_2" parent="write_function.menu_root"/>-->

